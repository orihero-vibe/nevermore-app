{
  "expo": {
    "name": "nevermore-app",
    "slug": "nevermore-app",
    "version": "1.0.1",
    "orientation": "default",
    "icon": "./src/assets/App_Icon.png",
    "splash": {
      "image": "./src/assets/splash-bg.png",
      "resizeMode": "cover",
      "backgroundColor": "#2D1B69"
    },
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "nevermoreapp",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nevermore.app",
      "buildNumber": "5"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/App_Icon.png",
        "backgroundColor": "#2D1B69"
      },
      "package": "com.nevermoreapp",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "nevermoreapp.com",
              "pathPrefix": "/reset-password"
            },
            {
              "scheme": "https",
              "host": "nevermoreapp.com",
              "pathPrefix": "/create-new-password"
            },
            {
              "scheme": "https",
              "host": "nevermoreapp.com",
              "pathPrefix": "/invite"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./src/assets/App_Icon.png"
    },
    "plugins": [
      "expo-asset",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#2D1B69"
        }
      ]
    ]
  }
}
